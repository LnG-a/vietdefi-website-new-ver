.content {
  display: flex;
  justify-content: space-between;
  width: 100%;
  padding: 0 135px;
  opacity: unset;
  z-index: 100;
  max-width: 1440px;
  margin: 0 auto;
}

.content_left {
  margin-top: 56px;
}

.content_left h2 {
  margin-bottom: 24px;
  font-weight: 700;
  font-size: 32px;
  line-height: 48px;
}

.content_left ul {
  margin-top: 16px;
  padding-left: 28px;
}

.content_left li {
  margin-bottom: 24px;
  font-weight: 700;
  font-size: 18px;
  line-height: 27px;
}

.content_left p {
  font-weight: 400;
  font-size: 18px;
  line-height: 24px;
}

.content_left a {
  color: #ff9501;
  text-decoration: none;
}

.content_left a:hover {
  color: yellow;
  text-decoration: underline;
}

.content_right {
  margin-top: 128px;
}

.content_right img {
  width: 485px;
  margin-left: 50px;
}

#set_font {
  font-size: 16px;
}

@media only screen and (max-width: 1200px) {
  .container {
    height: auto;
  }

  .content {
    padding: 0 30px 24px 30px;
  }
}

@media only screen and (max-width: 992px) {
  .container {
    height: auto;
  }

  .content {
    padding: 12px 30px 24px 30px;
    flex-direction: column;
    justify-content: unset;
  }

  .content_left {
    margin: 0;
  }

  .content_left h2 {
    font-size: 24px;
  }

  .content_left li {
    font-size: 16px;
  }

  .content_left p {
    font-weight: 400;
    font-size: 16px;
    line-height: 24px;
  }

  .content_right {
    display: none;
  }
}
